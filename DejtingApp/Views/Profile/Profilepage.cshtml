@using DejtingApp.Models

@model  DejtingApp.Models.ProfilePageViewModels

@{
    ViewBag.Title = "Profilepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profil</h2>


<div class="container">
    <div class="row">
        <div class="col-md-4">
            @foreach (var item in Model.Profiles)
            {
                <img src="@Html.DisplayFor(modelItem => item.ImagePath)" style="width: 200px; height: 250px" />
            }
        </div>
        <div class="col-md-8" style="border-color: black; max-height: 320px;">
            @*List of messages*@

            <div class="list-group" id="results" style="max-height: 300px; overflow-y: auto">
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.Profiles)
        {
            <div class="col-md-4">
                @Html.DisplayFor(modelItem => item.Förnamn)
                @Html.DisplayFor(modelItem => item.Efternamn),

                @{
                    var today = DateTime.Today;
                    var date = today.Year - item.Födelseår.Year;
                    if (item.Födelseår.Date > today.AddYears(-date)) { date--; }


                    @Html.DisplayFor(modelItem => date);
                }

            </div>
        }
    <div class="col-md-8">
        <textarea class="form-control form-group-lg" placeholder="Make your move" id="Text"></textarea>
        @*Message input field*@
    </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            @*Whitespace*@
        </div>
        <div class="col-md-8">
            @*En submit knapp för att skriva på wallen *@
            <input type="button" value="Send message!" class="btn-large btn-primary" id="sendMessage" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            @foreach (var item in Model.Profiles)
            {
                <h4>Description</h4>
                @Html.DisplayFor(modelItem => item.Description)
            }
        </div>

        <div class="col-md-8">
        </div>
    </div>
</div>
@foreach (var item in Model.Profiles)
{
    @section scripts {
        <script type="text/javascript">
   $(document).ready(function() {
            getNew();
        });
        function getNew() {
            $.ajax("/api/Message/lista").then(function (data) {
                console.log(data)
                for(var i=0;i<data.length;i++)
                {
                    if (data[i].Reciever == @item.ProfileId) {
                        var result = "<p>" + data[i].MessageText + "</p>";
                        var namn = "<h4>" + data[i].Förnamn + " " + data[i].Efternamn + "</h4>";
                        var datum = "<p>" + data[i].Datum + "</p>";
                        $("#results").append(namn + result + datum);
                    }
                }
            });
        }

            $("#sendMessage").click(function () {
                $("#results").html("")
                var request = new MessageModel()
                $.ajax({
                    url: "/api/Message/PostMessage",
                    datatype: 'json',
                    contentType: "application/json",
                    type: "POST",
                    data: JSON.stringify(request),
                    success: function (response) {
                        $("#Text").val("");
                        getNew();
                    }

                })
            });
            function MessageModel() {
                var id = ""; //Nice!
                var self = this;
                self.MessageText = $("#Text").val();
                self.RecieverId = @item.ProfileId;
                }


        </script>
    }
}