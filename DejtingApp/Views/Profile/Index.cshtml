@using DejtingApp.Models
@using Microsoft.AspNet.Identity




@model  DejtingApp.Models.ProfilePageViewModels

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top: 30px">
    <div class="row">
        <div class="col-md-3">

            @if (Model.Image != null)
            {
                <img src="@Url.Content(Model.Image.ImgPath)" style="width: 200px; height: 250px" />
            }
            else
            {
                <img src="~/Content/Images/default.png" style="width: 200px; height: 250px" />
            }


            @foreach (var item in Model.Profiles)
            {
                <div style="font-size: 20px; font-weight: bold">
                    @Html.DisplayFor(modelItem => item.Förnamn)
                    @Html.DisplayFor(modelItem => item.Efternamn),

                    @{
                        var today = DateTime.Today;
                        var date = today.Year - item.Födelseår.Year;
                        if (item.Födelseår.Date > today.AddYears(-date)) { date--; }


                        @Html.DisplayFor(modelItem => date);
                    }
                </div>
            }
        </div>
        <div class="col-md-5" style="border-color: black; max-height: 320px;">
            @*List of messages*@
                <div class="list-group" id="results" style="max-height: 300px; overflow-y: auto">
                </div>

        </div>
        <div class="col-md-4">
            <div class="list-group" id="viewResults" style="max-height: 300px; overflow-y: auto">
                <h4>These people checked you out ;)</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3" style="font-size: 20px; font-weight: bold">
        </div>
        <div class="col-md-5">
            <textarea class="form-control form-group-lg" placeholder="Make your move" id="Text"></textarea>
            @*Message input field*@
        </div>
        <div class="col-md-4">

        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @foreach (var item in Model.Profiles)
            {
                <h4 class="list-group-item-heading">About me</h4>
                <p class="list-group-item-text">@Html.DisplayFor(modelItem => item.Description)</p>
            }
        </div>
        <div class="col-md-5">
            @*En submit knapp för att skriva på wallen *@
            <br />
            <input type="button" value="Send message!" class="btn-large btn-primary" id="sendMessage" /> @* AJAX call ska peka på '#sendMessage'*@
            <input type="button" value="Export profile" id="serializeProfile" class="btn-toolbar" />
        </div>
        <div class="col-md-4">

        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <h4>Intressen :</h4>
            <div style="float: left">
                @foreach (var item in Model.Interests)
                {
                    <p style="border: 1px solid; border-radius: 2.5px;">@item.InterestName</p>
                }
            </div>
        </div>
        <div class="col-md-5">
            @*SHow friend list?*@
            @foreach (var dud in Model.Profiles)
            {
                <input type="submit" class="btn-success" value="View friend list" onclick="location.href='@Url.Action("ViewFriendList", "Profile", new { @dud.ProfileId })'" />
                <input type="submit" class="btn-success" value="Edit profile" onclick="location.href='@Url.Action("Edit", "Profile", new { id = dud.ProfileId }, null)'" />
            }
        </div>
        <div class="col-md-4">
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title" id="myModalLabel">Warning!</h3>

            </div>
            <div class="modal-body">
                <h4>Are you sure you want to DELETE?</h4>

            </div>
            <!--/modal-body-collapse -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnDelteYes" href="#">Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
            </div>
            <!--/modal-footer-collapse -->
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@foreach (var item in Model.Profiles)
{
    @section scripts {
        <script type="text/javascript">

        $(document).ready(function() {
            getNew(),
            getViews();
        });

            
            function getViews() {
            $.ajax("/api/ProfileView/Viewslista").then(function (data) {
                console.log(data)
                var nmr = 1;
                for (var i = 0; i < data.length; i++)
                {
                    var result = "<p>" + nmr + " " + data[i].Förnamn + " " + data[i].Efternamn + "</p>";
                    $("#viewResults").append(result);
                    nmr++;
                }
            });
        }

            $('#serializeProfile').click(function () {
                $.ajax({
                    url: ("/Profile/Serialize"),
                    //datatype: 'json',
                    //contentType: "application/json",
                    type: 'POST',
                    //data: JSON.stringify(MessageId),
                    success: function (data) {
                        alert("Your profile has been saved!");
                    },
                });
            });

        function getNew() {
            $.ajax("/api/Message/lista").then(function (data) {
                $("#Text").val("");
                for(var i=0;i<data.length;i++)
                {
                    if (data[i].Reciever == @item.ProfileId) {
                        var result = "<p>" + data[i].MessageText + " </p>";
                        var namn = "<h4>" + data[i].Förnamn + " " + data[i].Efternamn + " Wrote: </h4>";
                        var button = '<button class="btn btnDelete" data-model-id="' + data[i].MessageID + '">delete</button>';
                        $("#results").append(namn + result + button);
                    }
                }
            });
            }

             $(document).on('click', '.btn.btnDelete', function (e) {
            e.preventDefault();
            var id = $(this).closest('button').data('model-id');
                 $('#myModal').data('model-id', id).modal('show');
                 console.log(id);
        });

        $('#btnDelteYes').click(function () {
             var MessageId = $('#myModal').data("model-id");
                console.log(MessageId);
                var url = "/Profile/DeleteMessage/" + MessageId;
                console.log(url);
                $.ajax({
                    url: url,
                    datatype: 'json',
                    contentType: "application/json",
                    type: 'POST',
                    data: JSON.stringify(MessageId),
                }).done(function () {
                    $("#results").html("")
                    getNew();
                });
            $('#myModal').modal('hide');
        });


            $("#sendMessage").click(function () {
                $("#results").html("")
                var request = new MessageModel()
                $.ajax({
                    url: "/api/Message/PostMessage",
                    datatype: 'json',
                    contentType: "application/json",
                    type: "POST",
                    data: JSON.stringify(request),
                    success: function (response) {
                        getNew();
                    }
                });
            });
            function MessageModel() {
                var self = this;
                self.MessageText = $("#Text").val();
                self.RecieverId = @item.ProfileId;
                }


        </script>
    }
}